<div class="container">
  <div class="rows">
    <div class="col-md-4 col-md-offset-4">
     <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1>Pro account</h1>
          <p>Sign up to recieve exclusive pro features</p>
        <% else %>
          <h1>Basic account</h1>
          <p>Sign up to recieve basic access to the site</p>
        <% end %>
      </div>
      
      <div class="well">
        <h2>Sign up</h2>
      
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
            <%= render "basic_form" %>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div